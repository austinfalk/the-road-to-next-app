{
  "name": "the-road-to-next-app",
  "version": "0.1.0",
  "description": "A learning/demonstration application showcasing Next.js 16 App Router patterns, server/client components, and modern React practices",
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "bun",
    "biome",
    "radix-ui",
    "app-router",
    "server-components"
  ],
  "private": true,
  "scripts": {
    "build": "bun run --bun next build",
    "check": "biome check .",
    "check:all": "bun run type && bun run check",
    "clean": "rm -rf .next node_modules bun.lock",
    "dev": "bun run --bun next dev",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint-fix": "biome check --write .",
    "lint-fix-unsafe": "biome check --write --unsafe .",
    "start": "bun run --bun next start",
    "type": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.548.0",
    "next": "16.0.1",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/bun": "^1.3.1",
    "@types/node": "^22.18.13",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "tailwindcss": "^4.1.16",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "bun",
    "sharp",
    "unrs-resolver"
  ]
}
